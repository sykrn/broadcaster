{
  "name": "screen-broadcaster",
  "version": "1.0.0",
  "description": "WebRTC-based screen sharing application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "generate-cert": "openssl req -nodes -new -x509 -keyout server.key -out server.cert -days 365 -subj '/C=US/ST=State/L=City/O=Organization/CN=localhost'"
  },
  "keywords": [
    "webrtc",
    "screensharing",
    "broadcast"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}